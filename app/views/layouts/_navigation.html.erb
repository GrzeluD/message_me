<div class="ui inverted menu">
  <%= link_to 'Chatroom', root_path, class: 'item' %>
  <a class="item">
    Messages
  </a>
  <div class="right menu">
    <div class="ui dropdown item">
      Account <i class="dropdown icon"></i>
      <div class="menu">
        <% if !logged_in? %>
          <%= link_to 'Login', login_path, class: 'item' %>
        <% else %>
          <div class="divider"></div>
          <%= link_to "Logout", logout_path, method: :delete, class: "item" %>
        <% end %>
      </div>
    </div>
    <% if !logged_in? %>
      <div class="item">
        <%= link_to "Sign Up", login_path, class: "ui inverted brown basic button" %>
      </div>
    <% end %>
  </div>
</div>